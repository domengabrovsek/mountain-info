<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="8dp"
    android:background="@drawable/rectangle_grey">
    
    <ImageView
        android:id="@+id/mountain"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:src="@drawable/mountain1"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iconName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mountain_name"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/mountain"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/mountainName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconName"
        android:text="Triglav"
        android:textSize="17sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"/>

    <ImageView
        android:id="@+id/iconTerrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_terrain"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/mountain"
        app:layout_constraintTop_toBottomOf="@id/mountainName"/>

    <TextView
        android:id="@+id/mountainRange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mountainName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconTerrain"
        android:text="Julijske Alpe"
        android:textSize="17sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"/>

    <ImageView
        android:id="@+id/iconAltitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/mountain"
        app:layout_constraintTop_toBottomOf="@id/mountainRange"/>

    <TextView
        android:id="@+id/mountainAltitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mountainRange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconAltitude"
        android:text="2864 m"
        android:textSize="17sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>